<!DOCTYPE html>
<html>
<head>
  <title>Nchak - タスク管理ツール</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="wrapper">
    <%= render 'shared/header' %>
    <div id="contents">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <%= render 'shared/footer' %>
  </div>
</body>
</html>
